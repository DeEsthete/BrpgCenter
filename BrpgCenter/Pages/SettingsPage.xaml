<Page x:Class="BrpgCenter.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrpgCenter"
      mc:Ignorable="d" 
      d:DesignHeight="505" d:DesignWidth="944"
      Title="SettingsPage">

    <Page.Background>
        <ImageBrush ImageSource="/BrpgCenter;component/Images/profileSetеingsBackgound.png"/>
    </Page.Background>

    <Grid>
        <TextBlock x:Name="choiceTextBlock" HorizontalAlignment="Left" Margin="354,151,0,0" TextWrapping="Wrap" Text="Выбрать язык" VerticalAlignment="Top" Width="242" TextAlignment="Center" FontSize="20"/>
        <Button x:Name="saveChanged" Style="{DynamicResource ButtonMain}" Content="Сохранить изменения и вернутся" HorizontalAlignment="Left" Margin="324,470,0,0" VerticalAlignment="Top" Width="298" Click="SaveChangedClick"/>
        <ComboBox x:Name="languagesComboBox" HorizontalAlignment="Left" Margin="354,183,0,0" VerticalAlignment="Top" Width="242"/>
    </Grid>
</Page>
