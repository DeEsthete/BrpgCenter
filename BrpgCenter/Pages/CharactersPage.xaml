<Page x:Class="BrpgCenter.CharactersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BrpgCenter"
      mc:Ignorable="d" 
      d:DesignHeight="505" d:DesignWidth="944"
      Title="CharactersPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/BrpgCenter;component/Images/charactersBackground.png"/>
        </Grid.Background>
        <ListBox Style="{DynamicResource ListBoxMain}" HorizontalAlignment="Left" Height="485" Margin="10,10,0,0" VerticalAlignment="Top" Width="644"/>
        <Button Style="{DynamicResource ButtonMain}" Content="Создать нового персонажа" HorizontalAlignment="Left" Margin="659,10,0,0" VerticalAlignment="Top" Width="275"/>
        <Button Style="{DynamicResource ButtonMain}" Content="Редактировать персонажа" HorizontalAlignment="Left" Margin="659,40,0,0" VerticalAlignment="Top" Width="275"/>

    </Grid>
</Page>
